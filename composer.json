{
  "name": "thomasdv/phpchartjs",
  "description": "PHP library for ChartJS",
  "keywords": [
    "chartjs",
    "graph",
    "php"
  ],
  "readme": "README.md",
  "homepage": "http://halfpastfouram.github.io/PHPChartJS",
  "type": "package",
  "version": "v1.2.3",
  "license": "AGPL-3.0-or-later",
  "authors": [
    {
      "name": "Bob Kruithof"
    }
  ],

   "minimum-stability": "dev",
   "prefer-stable": true,

  "repositories": [
      {
          "type": "vcs",
          "url": "https://github.com/thomasdv/collection.git"
      }
  ],
  "require": {
    "php": ">=5.6.0 || ^7.0 || ^8.0 || ^8.1 || ^8.2 || ^8.3 || ^8.4",
    "ext-dom": "*",
    "ext-json": "*",
    "laminas/laminas-json": "3.7.1",
    "thomasdv/collection": "dev-master",
    "symfony/var-dumper": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.*",
    "squizlabs/php_codesniffer": "3.5.3",
    "friendsofphp/php-cs-fixer": "*",
    "sensiolabs/security-checker": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Halfpastfour\\PHPChartJS\\": "src/",
      "Test\\": "test/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "cs-check": "./vendor/bin/phpcs",
    "cs-fix": "./vendor/bin/phpcbf"
  }
}
